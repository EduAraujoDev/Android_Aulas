<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/ivIcone"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ivIcone"
        android:id="@+id/tvMarca"
        android:text="teste1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMarca"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ivIcone"
        android:id="@+id/tvModelo"
        android:text="teste2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvModelo"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/ivIcone"
        android:id="@+id/tvVersaoAndroid"
        android:text="teste2" />

    <View
        android:id="@+id/dividerProdutos"
        android:layout_below="@id/ivIcone"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="0.8dp" />
</RelativeLayout>